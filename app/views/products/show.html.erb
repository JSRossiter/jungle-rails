<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>
    </div>

    <div class="row">
      <h3>Reviews</h3>


      <% if current_user %>
        <%= form_for [@product, @review] do |form| %>

          <div class="col-sm-2">
            <div class="form-group">
              <%= form.label :rating %>
              <%= form.select(:rating, options_for_select(1..5), { include_blank: true }, class: 'form-control') %>
            </div>
          </div>

          <div class="col-sm-8">
            <div class="form-group">
              <%= form.label :description %>
              <%= form.text_area :description, class: 'form-control', placeholder: 'Tell us what you thought' %>
            </div>
          </div>
          <div class="col-sm-2">
          <br>
          <%= form.submit 'Post Review', class: 'btn btn-primary' %>
          </div>
        <% end %>
      <% end %>

      <div class="col-sm-9">
        <br>
        <%= render @product.reviews.order(created_at: :desc) %>

      </div>

    </div>

  </article>

</section>
